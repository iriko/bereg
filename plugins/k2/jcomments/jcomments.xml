<?xml version="1.0" encoding="utf-8"?>
<install type="plugin" group="k2" version="2.5.0" method="upgrade">
	<name>K2 - JComments</name>
	<creationDate>19/03/2013</creationDate>
	<author>smart</author>
	<authorEmail>smart@joomlatune.ru</authorEmail>
	<authorUrl>http://www.joomlatune.ru</authorUrl>
	<copyright>Copyright 2010-2013 JoomlaTune.ru All rights reserved!</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>1.3</version>
	<description>PLG_K2_JCOMMENTS_XML_DESCRIPTION</description>
	<files>
		<filename plugin="jcomments">jcomments.php</filename>
	</files>
	<languages folder="language">
	    <language tag="en-GB">en-GB/en-GB.plg_k2_jcomments.ini</language>
	    <language tag="en-GB">en-GB/en-GB.plg_k2_jcomments.sys.ini</language>
	    <language tag="ru-RU">ru-RU/ru-RU.plg_k2_jcomments.ini</language>
	    <language tag="ru-RU">ru-RU/ru-RU.plg_k2_jcomments.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="autosubscribe"
					type="radio"
					default="0"
					label="PLG_K2_JCOMMENTS_FIELD_AUTOSUBSCRIBE_LABEL"
					description="PLG_K2_JCOMMENTS_FIELD_AUTOSUBSCRIBE_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="1" name="K2 JComments">http://www.joomlatune.ru/updates/k2-jcomments.xml</server>
	</updateservers>
</install>